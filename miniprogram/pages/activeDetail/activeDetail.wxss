.tr{padding: 30rpx;border: 1rpx solid rgba(0, 0, 0, 0.1);background: #fff;margin: 20rpx 0 0 0;position: relative;}
.active-desc{width: 100%;height: 300rpx;}
.img-p{padding: 20rpx;display: flex;justify-content:flex-start;flex-wrap: wrap;border: 1rpx solid rgba(0, 0, 0, 0.1);background: #fff;margin: 20rpx 0 0 0;}

